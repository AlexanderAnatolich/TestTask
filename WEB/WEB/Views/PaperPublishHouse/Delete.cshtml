@model BLL.Models.PaperPublishHouseViewModel

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PublishHouse)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PublishHouse)
        </dd>
    </dl>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            @{
                if (Model.NewsPapers.Count < 1)
                {

                    <input type="submit" value="Delete" class="btn btn-default" />
                }
                else
                {
                    <dl>
                        <dt>
                            This publish house have next news papers
                        </dt>
                        @foreach (var item in Model.NewsPapers)
                        {
                            <dd>
                                @Html.DisplayTextFor(it => item.Title)
                            </dd>
                        }
                    </dl>
                    <p style="color:red">
                        Removal is not possible!.
                        The selected publisher has books.
                    </p>
                    <input type="button" value="Back to List" class="btn btn-default" onclick='window.location = "@Url.Action("Index", "Base")"' />
                }
            }
        </div>
    }
</div>